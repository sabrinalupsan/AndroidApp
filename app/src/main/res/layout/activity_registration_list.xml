<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreditCards.RegistrationList">

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/orange"
            android:text="@string/credit_cards_history"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/spinner_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <GridView
            android:id="@+id/gv_information"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:clickable="true"

            >

        </GridView>

        <Button
            android:id="@+id/btn_backToMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:onClick="returnToMainActivityFromList"
            android:text="@string/back_to_the_initial_activity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:onClick=""
                android:text="@string/save_all" />

            <Button
                android:id="@+id/button4"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:text="@string/get_all" />

            <Button
                android:id="@+id/button5"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/delete_all" />

        </LinearLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>